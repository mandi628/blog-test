<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Blog</title>
</head>
<body>
  <h1>My Blog</h1>

  <a href="/new">Create New Post</a>

  <% if (posts.length > 0) { %>
    <% posts.forEach(post => { %>
      <div>
        <h2><%= post.title %></h2>
        <p><%= post.content %></p>
      </div>
    <% }); %>
  <% } else { %>
    <p>No posts yet!</p>
  <% } %>
</body>
</html>
